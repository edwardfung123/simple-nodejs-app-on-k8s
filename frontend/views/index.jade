extends layout

block content
  h1= title
  p Welcome to #{title}
  div#blogs
  footer
    p some footer here

  script(src="https://code.jquery.com/jquery-3.1.1.min.js")
  script.
    $(document).ready(function(){
      $.ajax({
        url: '/api/blogs',
      }).done(function(data){
        var blogs = data.blogs;
        var $blogs = $('#blogs');
        var htmls = blogs.map(function(blog){
          return '<div class="blog"><h1>' + blog.title + '</h1></div>';
        });
        $blogs.append(htmls.join('<hr>'));
      });
    });
